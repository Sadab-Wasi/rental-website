<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/loader.ejs') %>

    <div class="tm-main">
        <%- include('../includes/welcome_section.ejs') %>

        <div class="container">

            <div class="row justify-content-around tm-albums-container grid ">
                <div class="col-sm-6 col-12 col-md-6 col-lg-6 col-xl-6 tm-album-col" style="border: 1px solid #ced4da90;" >
                    <form class="col-8 pb-4" method="POST"
                        action="/admin/<% if (path == '/admin/update-product') { %>update-product/<%= product.id %><% } else { %>create-product<% } %>" > <!-- border: 1px solid #ced4da; margin-bottom: 1.2rem; -->
                        <h4 class="col-12 text-center pt-2 pb-3">
                            <% if (path == '/admin/update-product') { %>Update your product details<% } else { %>Enter your product details<% } %>
                        </h4>
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input class="form-control form-control2 p-2" type="text" name="title" id="title" value="<%= product.title %>">
                        </div>
                        <div class="form-group">
                            <label for="imageUrl">Image URL</label>
                            <input class="form-control form-control2 p-2" type="text" name="imageUrl" id="imageUrl" value="<%= product.imageUrl %>">
                        </div>
                        <div class="form-group">
                            <label for="price">Price</label>
                            <input class="form-control form-control2 p-2" type="text" name="price" id="price" value="<%= product.price %>">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control form-control2 p-2" type="text" name="description" id="description"><%= product.description %></textarea>
                        </div>
                        <button class="btn btn-primary float-right" type="submit">
                            <% if (path == '/admin/update-product') { %>
                                Update Product
                            <% } else { %>
                                Add Product
                            <% } %>
                        </button>
                    </form>
                </div>
            </div>

            <%- include('../includes/footer.ejs') %>
        </div>
    </div>

<%- include('../includes/js_default.ejs') %>
<%- include('../includes/end.ejs') %>
